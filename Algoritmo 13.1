#include <stdio.h>

int main() {
    int numero, es_primo = 1; 

    printf("Ingrese un número: ");
    scanf("%d", &numero);

    if (numero <= 1) {
        es_primo = 0;
    } else {
        for (int i = 2; i <= numero / 2; i++) {
            if (numero % i == 0) {
                es_primo = 0;
                break; 
            }
        }
    }

   
    if (es_primo) {
        printf("%d es un número primo.\n", numero);
    } else {
        printf("%d no es un número primo.\n", numero);
    }

    return 0;
}

