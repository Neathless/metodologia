#include <stdio.h>
#include <string.h>

int main(void) {
  char password[20] = "Contrase単a1";
  char intentoContra[20];
  int contador = 3;

  while (contador > 0) {
    printf("Ingrese la contrase単a: ");
    scanf("%s", intentoContra);

  
    if (strcmp(intentoContra, password) == 0) {
      printf("Contrase単a correcta. Acceso permitido.\n");
      break;  
    } else {
      contador--;
      printf("Contrase単a incorrecta. Tienes %d intentos restantes.\n", contador);
    }
  }

  if (contador == 0) {
    printf("Se han agotado los intentos. Acceso denegado.\n");
  }

  return 0;
}
